{
  "name": "lights-on",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "postinstall": "cd server && npm install --omit=dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint js/ server/",
    "lint:fix": "eslint js/ server/ --fix",
    "format": "prettier --write \"js/**/*.js\" \"server/**/*.js\" \"*.html\" \"*.css\" \"*.json\"",
    "format:check": "prettier --check \"js/**/*.js\" \"server/**/*.js\" \"*.html\" \"*.css\" \"*.json\""
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.50.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.20.0",
    "globals": "^15.15.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.5.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.0"
  }
}
